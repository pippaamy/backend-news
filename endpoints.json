{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles",
    "queries": ["author", "topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6
        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "serves an article object for the given article_id",
    "queries": [],
    "exampleResponse": {
      "articles": [
        {
          "title": "Cutest dog ever spotted!",
          "topic": "dog",
          "author": "Ned Stark",
          "body": "The dog is called Evie",
          "created_at": "2009-05-30T15:59:13.341Z",
          "votes": 1,
          "comment_count": 6
        }
      ]
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "serves an array of comments for the given article_id",
    "queries": [],
    "exampleResponse": {
      "comments": [
        {
          "comment_id": 1,
          "votes": 16,
          "created_at": "2017-11-20T08:58:48.322Z",
          "author": "happyamy2016",
          "body": "this is fab!",
          "article_id": 1
        },
        {
          "comment_id": 2,
          "votes": 20,
          "created_at": "2016-11-05T04:24:32.241Z",
          "author": "cooljmessy",
          "body": "I agree!",
          "article_id": 1
        }
      ]
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "adds a new comment to the given article_id",
    "queries": [],
    "exampleResponse": {
      "comment": {
        "comment_id": 3,
        "votes": 0,
        "created_at": "2018-11-05T04:24:32.241Z",
        "author": "cooljmessy",
        "body": "This is my new comment",
        "article_id": 1
      }
    }
  },
  "PATCH /api/articles/:article_id": {
    "description": "updates the votes of the given article_id",
    "queries": [],
    "exampleResponse": {
      "article": {
        "title": "Cutest dog ever spotted!",
        "topic": "dog",
        "author": "Ned Stark",
        "body": "The dog is called Evie",
        "created_at": "2009-05-30T15:59:13.341Z",
        "votes": 1,
        "comment_count": 6
      }
    }
  },
  "DELETE /api/comments/:comment_id": {
    "description": "deletes the comment with the given comment_id",
    "queries": [],
    "exampleResponse": {
      "comment": {
        "comment_id": 4,
        "votes": -100,
        "created_at": "2017-11-20T08:58:48.322Z",
        "author": "icellusedkars",
        "body": "lets go to the seaside",
        "article_id": 1
      }
    }
  },
